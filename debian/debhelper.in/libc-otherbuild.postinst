#!/bin/bash

set -e

if [ "$1" = "configure" ]
then
  opt=OPT
  if [ -f /etc/ld.so.nohwcap ]; then
    grep -v "^$opt\$" /etc/ld.so.nohwcap > /etc/ld.so.nohwcap.tmp || true
    mv -f /etc/ld.so.nohwcap.tmp /etc/ld.so.nohwcap
    test -s /etc/ld.so.nohwcap || rm -f /etc/ld.so.nohwcap
  fi
fi

#DEBHELPER#

exit 0
