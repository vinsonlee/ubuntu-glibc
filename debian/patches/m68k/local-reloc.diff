--- glibc-2.3.2/ports/sysdeps/m68k/dl-machine.h.org	2004-08-05 02:00:32.000000000 +0200
+++ glibc-2.3.2/ports/sysdeps/m68k/dl-machine.h	2004-08-05 02:01:07.000000000 +0200
@@ -310,6 +310,8 @@
   Elf32_Addr *const reloc_addr = (void *) (l_addr + reloc->r_offset);
   if (ELF32_R_TYPE (reloc->r_info) == R_68K_JMP_SLOT)
     *reloc_addr += l_addr;
+  else if (ELF32_R_TYPE (reloc->r_info) == R_68K_NONE)
+    return;
   else
     _dl_reloc_bad_type (map, ELF32_R_TYPE (reloc->r_info), 1);
 }
